<%= render "layouts/header" %>
<div class="container mt-5">
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: {method: :post, class: "form-signin"}) do |f| %>
    <%= devise_error_messages! %>

    <h2 class="form-signin-heading">Forgot Password</h2>

    <div class="field">
      <%= f.email_field :email, autofocus: true, required: true, placeholder: "Email address", class: "form-control forgot-pass" %>
    </div>

    <div class="form-group">
      <%= f.submit "Send Password", class: "btn btn-lg btn-primary btn-block" %>
    </div>
    <%= render "devise/shared/links" %>
  <% end %>
</div>



