<%= render "layouts/header" %>

<div class="container mt-5 mb-5">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "form-signin"}) do |f| %>
    <%= devise_error_messages! %>

    <h2 class="form-signin-heading">Sign Up</h2>

    <div class="field">
      <%= f.email_field :email, autofocus: true, required: true, placeholder: "Email address", class: "form-control" %>
    </div>

    <div class="field">
      <%= f.password_field :password, autocomplete: "off", required: true, placeholder: "Password", class: "pass-1 form-control" %>
    </div>

    <div class="field">
      <%= f.password_field :password_confirmation, autocomplete: "off", required: true, placeholder: "Password Again", class: "pass-2 form-control" %>
    </div>

    <div class="form-group">
      <%= f.submit "Sign up", class: "btn btn-lg btn-primary btn-block" %>
    </div>
    <%= render "devise/shared/links" %>
  <% end %>
</div>


